import ping3

def ping_server(ip_address):
    try:
        response_time = ping3.ping(ip_address)
        if response_time is not None:
            print(f"Server {ip_address} responded in {response_time} ms.")
            return True
        else:
           print(f"Server {ip_address} is unreachable.")
           return False
        
    except Exception as e:
        print("Error:", e)

if ping_server is True:
    print("0")
else:
    print("1")
# Example usage
ping_server("202.90.198.212")                   